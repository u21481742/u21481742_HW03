<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href ="~favicon.ico " rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - Homework Assignment 3</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <div class=" navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">

                            <span class="navbar-toggler-icon mr-auto"></span>

                        </button>
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav">
                            <li>@Html.ActionLink("Files", "Index", "Files", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Images", "Index", "Images", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Videos", "Index", "Videos", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("About Me", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        </ul>

                    </div>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()+
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - INF 272 Homework 3</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    
</body>
</html>
